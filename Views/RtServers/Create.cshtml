@model DnSrtChecker.Models.ViewModels.RtServerViewModel

@{
    ViewData["Title"] = "Create";
}


<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <a onclick="history.go(-1);" class="btn btn-manage"><i class="fa fa-chevron-left iconColorStyleRetex"></i></a>
            <h2 class="titlePage">Nuovo Server RT</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RtServerStatus.SzRtServerId" class="control-label">Matricola Fiscale del server RT:</label>
                    <input asp-for="RtServerStatus.SzRtServerId" class="form-control" name="SzRtServerId" />
                    <span asp-validation-for="RtServerStatus.SzRtServerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SzLocation" class="control-label">Posizione: </label>
                    <input asp-for="SzLocation" class="form-control" name="SzLocation" />
                    <span asp-validation-for="SzLocation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SzIpAddress" class="control-label">Indirizzo IP:</label>
                    <input asp-for="SzIpAddress" class="form-control" name="SzIpAddress" required pattern="^([0-9]{1,3}\.){3}[0-9]{1,3}$" title="Devi inserire un IP Address Valido." />
                    <span asp-validation-for="SzIpAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SzUsername" class="control-label">Nome Utente d'accesso:</label>
                    <input asp-for="SzUsername" class="form-control" name="SzUsername" />
                    <span asp-validation-for="SzUsername" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SzPassword" class="control-label">Password d'accesso:</label>
                    <input asp-for="SzPassword" class="form-control" name="SzPassword" />
                    <span asp-validation-for="SzPassword" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBox("BVatVentilationFlag", Model.RtServerStatus.BVatVentilationFlag ?? false)
                            <b> @Html.DisplayName("Ventilazione IVA")</b>
                        </label>
                    </div>
                </div>*@
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBox("BOnDutyFlag", Model?.BOnDutyFlag)
                            @*<input asp-for="@Model.BOnDutyFlag" type="text" name="BOnDutyFlag" />*@ <b> @Html.DisplayName("In Servizio")</b>
                        </label>
                    </div>
                </div>
               
                <div class="form-group">
                    <label asp-for="L.LRetailStoreId" class="control-label"> Punto di vendita</label>
                    <div style="display: flex;">
                        <select asp-for="L.LRetailStoreId" class="form-control" asp-items="ViewBag.LRetailStoreId"></select>
                        @*<a asp-action="RedirectToStore" class="btn btn-default"><i class="fa fa-plus"></i></a>*@
                        <a onclick="redirectToStore()" class="btn btn-default"><i class="fa fa-plus"></i></a>

                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salva" class="btn btn-manage" />
                </div>
            </form>
        </div>
    </div>
    @*<div>
        <a asp-action="Index"  style="float:left;"><i class="fa fa-chevron-left iconColorRetex"></i></a>
    </div>*@
</div>