@model DnSrtChecker.Models.ViewModels.RtServerViewModel

@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <a onclick="history.go(-1);" class="btn btn-manage"><i class="fa fa-chevron-left iconColorStyleRetex"></i></a>
            <h2 class="titlePage">Modifica Server RT : @Model.SzRtServerId</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4" style="font-family:Raleway">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RtServerStatus.SzRtServerId" />
                <div class="form-group">
                    <label asp-for="SzLocation" class="control-label">Posizione:</label>
                    <input asp-for="SzLocation" class="form-control" />
                    <span asp-validation-for="SzLocation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SzIpAddress" class="control-label">Indirizzo IP:</label>
                    <input asp-for="SzIpAddress" class="form-control" pattern="^([0-9]{1,3}\.){3}[0-9]{1,3}$" title="Devi inserire un IP Address Valido." />
                    <span asp-validation-for="SzIpAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SzUsername" class="control-label">Nome Utente d'accesso:</label>
                    <input asp-for="SzUsername" class="form-control" />
                    <span asp-validation-for="SzUsername" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SzPassword" class="control-label">Password d'accesso:</label>
                    <input asp-for="SzPassword" class="form-control" />
                    <span asp-validation-for="SzPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBox("BOnDutyFlag", Model?.BOnDutyFlag) <b> @Html.DisplayName("In Servizio")</b>
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input  asp-for="RtServerStatus.BVatVentilationFlag.Value" type="checkbox"/>
                            @*@Html.CheckBox("BVatVentilationFlag", Model.RtServerStatus.BVatVentilationFlag)*@ <b> @Html.DisplayName("Ventilazione IVA")</b>
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="L.LRetailStoreId" class="control-label">Punto di vendita</label>
                    <select asp-for="L.LRetailStoreId" class="form-control" asp-items="ViewBag.LRetailStoreId"></select>
                    <span asp-validation-for="L.LRetailStoreId" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="L.LStoreGroupId" />

                <div class="form-group">
                    <input type="submit" value="Salva le modifiche" class="btn btn-manage" />
                </div>
            </form>
        </div>
    </div>

    @*<div>
        <a asp-action="Index" style="float:left;"><i class="fa fa-chevron-left iconColorRetex"></i></a>
    </div>*@
</div>
