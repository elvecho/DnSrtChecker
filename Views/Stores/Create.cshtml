@model DnSrtChecker.Models.ViewModels.StoreViewModel

@{
    ViewData["Title"] = "Create";
}

    <div class="container">
       
        <div class="row">
            <div class="col-sm-4">
                <a onclick="history.go(-1);" class="btn btn-manage"><i class="fa fa-chevron-left iconColorStyleRetex"></i></a>
                <h2 class="titlePage">Nuovo Punto di vendita</h2>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <form asp-action="Create">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="LRetailStoreId" class="control-label">Codice del punto di vendita:</label>
                        <input asp-for="LRetailStoreId" class="form-control" name="LRetailStoreId" />
                        <span asp-validation-for="LRetailStoreId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SzDescription" class="control-label">Descrizione</label>
                        <input asp-for="SzDescription" class="form-control" />
                        <span asp-validation-for="SzDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LStoreGroupId" class="control-label"></label>
                        <div style="display: flex;">
                            <select asp-for="LStoreGroupId" class="form-control" asp-items="ViewBag.LStoreGroupId"></select>
                            @*<a asp-controller="StoreGroups" class="btn btn-default" asp-action="Create"><i class="fa fa-plus"></i></a>*@
                            <a href="/StoreGroups/Create?fromCreateStorePlus=true" class="btn btn-default"><i class="fa fa-plus"></i></a>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salva" class="btn btn-manage" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            @*<a asp-action="Index" style="float:left;"><i class="fa fa-chevron-left iconColorRetex"></i></a>*@
        </div>
    </div>
