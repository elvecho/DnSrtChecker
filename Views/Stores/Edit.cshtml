@model DnSrtChecker.Models.ViewModels.StoreViewModel

@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <a onclick="history.go(-1);" class="btn btn-manage"><i class="fa fa-chevron-left iconColorStyleRetex"></i></a>
            <h2 class="titlePage">Modifica punto vendita : @Model.LRetailStoreId</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4" style="font-family:Raleway">
            <form asp-action="Edit">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="LRetailStoreId" />
                <div class="form-group">
                    <label asp-for="SzDescription" class="control-label">Descrizione</label>
                    <input asp-for="SzDescription" class="form-control" />
                    <span asp-validation-for="SzDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LStoreGroupId" class="control-label">Insegna</label>
                    <select asp-for="LStoreGroupId" class="form-control" asp-items="ViewBag.LStoreGroupId"></select>
                    <span asp-validation-for="LStoreGroupId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salva le modifiche" class="btn btn-manage" />
                </div>
            </form>
        </div>
    </div>

    @*<div>
        <a asp-action="Index" style="float:left;"><i class="fa fa-chevron-left iconColorRetex"></i></a>
    </div>*@
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
